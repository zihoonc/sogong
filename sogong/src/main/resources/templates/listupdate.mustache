                        <input type="text" class="form-control" id="tableNum" value="{{book.tableNum}}"readonly>
                    </div>
                    <div class="form-group">
                        <label for="arrive">도착시간</label>
                        <input type="text" class="form-control" id="arrive">{{^book.arrrive}}{{/book.arrrive}}>
                    </div>
                </form>
                <a href="/list" role="button" class="btn btn-secondary">취소</a>
                <button type="button" class="btn btn-primary" id="btn-update">수정 완료</button>
                <button type="button" class="btn btn-danger" id="btn-delete">삭제</button>
            </div>


            </div>
