<body class="sub_page">

<div class="hero_area">
    <div class="bg-box">
        <img src="assets/images/hero-bg.jpg" alt="">
    </div>
    <!-- header section starts -->
    {{>layout/header}}
    <!-- end header section -->
</div>

<!-- about section -->

<div class="container">
    <table class="table">
        <thead>
        <th scope="col">번호</th>
        <th scope="col">이름</th>
        <th scope="col">전화번호</th>
        <th scope="col">이메일</th>
        <th scope="col">사람 수</th>
        <th scope="col">예약 날짜</th>
        <th scope="col">예약 시간</th>
        <th scope="col">테이블 번호</th>
        </thead>
        <tbody>
        {{#bookingList}}
            <tr>
                <td>{{bookingId}}</td>
                <td>{{name}}</td>
                <td>{{phone}}</td>
                <td>{{email}}</td>
                <td>{{people}}</td>
                <td>{{bookDay}}</td>
                <td>{{time}}</td>
                <td>{{tableNum}}</td>
                <td>
                    <form id="delete-form" action="/cancelBooking/{{bookingId}}" onclick="return confirm('정말로 삭제하시겠습니까?')" method="post">
                        <input type="hidden" name="_method" value="delete"/>
                        <button id="delete-btn" type="submit" class="btn btn-outline-danger">삭제</button>
                    </form>
                </td>
            </tr>
        {{/bookingList}}
        </tbody>

    </table>


</div>

